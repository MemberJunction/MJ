{
  "version": "1.0.0",
  "database": {
    "server": "localhost",
    "port": 1433,
    "database": "",
    "user": "sa",
    "password": "",
    "encrypt": true,
    "trustServerCertificate": true,
    "connectionTimeout": 30000
  },
  "ai": {
    "provider": "gemini",
    "model": "gemini-2.0-flash",
    "apiKey": "",
    "temperature": 0.1,
    "maxTokens": 4000
  },
  "analysis": {
    "cardinalityThreshold": 20,
    "sampleSize": 10,
    "includeStatistics": true,
    "includePatternAnalysis": true,
    "convergence": {
      "maxIterations": 10,
      "stabilityWindow": 2,
      "confidenceThreshold": 0.85
    },
    "backpropagation": {
      "enabled": true,
      "maxDepth": 3
    },
    "sanityChecks": {
      "dependencyLevel": true,
      "schemaLevel": true,
      "crossSchema": true
    },
    "sampleQueryGeneration": {
      "enabled": true,
      "queriesPerTable": 5,
      "maxExecutionTime": 30000,
      "includeMultiQueryPatterns": true,
      "validateAlignment": true,
      "tokenBudget": 100000,
      "maxRowsInSample": 10,
      "maxTables": 10
    }
  },
  "output": {
    "stateFile": "./db-doc-state.json",
    "sqlFile": "./output/add-descriptions.sql",
    "markdownFile": "./output/database-documentation.md",
    "outputDir": "./output"
  },
  "schemas": {
    "include": [],
    "exclude": [
      "sys",
      "INFORMATION_SCHEMA"
    ]
  },
  "tables": {
    "exclude": [
      "sysdiagrams",
      "__MigrationHistory"
    ]
  },
  "seedContext": {
    "overallPurpose": "Education",
    "businessDomains": [
      "Education"
    ],
    "industryContext": "Education"
  }
}