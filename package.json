{
  "name": "memberjunction-workspace",
  "version": "1.0.10",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "packages/Actions/*",
    "packages/Actions/BizApps/*",
    "packages/AI/*",
    "packages/AI/Providers/*",
    "packages/AI/Recommendations/*",
    "packages/AI/Vectors/*",
    "packages/AI/AgentManager/*",
    "packages/AI/AICLI",
    "packages/Communication/*",
    "packages/Communication/providers/*",
    "packages/Templates/*",
    "packages/Angular/*",
    "packages/Angular/Explorer/*",
    "packages/Angular/Generic/*",
    "packages/AngularElements/*",
    "packages/React/*",
    "packages/Scheduling/*",
    "packages/TestingFramework/*",
    "packages/Credentials/*"
  ],
  "scripts": {
    "prebuild": "node -e \"try { require('turbo') } catch (e) { console.error('\\n‚ùå Dependencies not installed. Run: npm install\\n'); process.exit(1); }\"",
    "build": "npm run build:stream",
    "build:stream": "turbo --log-order=stream build --filter=\"@memberjunction*\"",
    "build:generated": "turbo --log-order=stream build --filter=\"mj_generatedentities\" --filter=\"mj_generatedactions\"",
    "build:api": "turbo --log-order=stream build --filter=\"mj_api\"",
    "build:explorer": "turbo --log-order=stream build --filter=\"mj_explorer\"",
    "build:mcp-agent": "cd agent-run-mcp-server && npm run build",
    "build:table": "turbo build --filter=\"@memberjunction*\"",
    "watch": "turbo watch --filter=\"@memberjunction*\"",
    "start": "turbo start --filter=mj_explorer --filter=mj_api",
    "start:api": "turbo start --filter=mj_api",
    "start:explorer": "turbo start --filter=mj_explorer",
    "start:mcp-agent": "node agent-run-mcp-server/dist/index.js",
    "mj": "node packages/MJCLI/bin/run.js",
    "mj:migrate": "node packages/MJCLI/bin/run.js migrate",
    "mj:codegen": "node packages/MJCLI/bin/run.js codegen",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "deps:update": "syncpack update",
    "deps:missing": "knip --include unlisted",
    "deps:unused": "knip --include dependencies,devDependencies",
    "deps:full": "knip",
    "deps:fix-missing": "node scripts/fix-missing-dependencies.mjs",
    "deps:fix-missing:dry": "node scripts/fix-missing-dependencies.mjs --dry-run",
    "deps:remove-unused": "node scripts/remove-unused-dependencies.mjs",
    "deps:remove-unused:dry": "node scripts/remove-unused-dependencies.mjs --dry-run",
    "docs": "typedoc",
    "change": "changeset",
    "version": "changeset version",
    "mergemain": "node ci/merge_main.mjs",
    "mergemain:update-lock": "node ci/merge_main_and_update_lock.mjs",
    "commitpush": "node ci/commit_push.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MemberJunction/MJ"
  },
  "dependencies": {
    "@memberjunction/cli": "3.1.1",
    "archiver": "~7.0.0",
    "extract-files": "~13.0.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "baseline-browser-mapping": "^2.9.11",
    "caniuse-lite": "1.0.30001764",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "~3.5.2",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jsx-a11y": "~6.6.1",
    "eslint-plugin-prettier": "5.1.3",
    "knip": "^5.71.0",
    "prettier": "^3.3.1",
    "syncpack": "^12.3.2",
    "turbo": "^2.7.3",
    "typedoc": "~0.26.0",
    "typedoc-plugin-missing-exports": "~3.0.0",
    "typescript": "5.4.5"
  },
  "overrides": {
    "@types/node": "20.14.2",
    "browserslist": "4.24.4",
    "caniuse-lite": "1.0.30001764",
    "rimraf": "^5.0.10",
    "glob": "^10.5.0",
    "archiver": "~7.0.0",
    "archiver-utils": "^5.0.0",
    "inflight": "^1.0.6",
    "fstream": "npm:tar-fs@^3.0.4",
    "lodash.isequal": "npm:fast-deep-equal@^3.1.3",
    "unzipper": "^0.12.3"
  }
}
