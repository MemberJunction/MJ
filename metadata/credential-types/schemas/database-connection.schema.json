{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "title": "Host",
      "description": "Database server hostname or IP",
      "isSecret": false,
      "order": 0
    },
    "port": {
      "type": "integer",
      "title": "Port",
      "description": "Database port number",
      "isSecret": false,
      "order": 1
    },
    "database": {
      "type": "string",
      "title": "Database",
      "description": "Database name",
      "isSecret": false,
      "order": 2
    },
    "username": {
      "type": "string",
      "title": "Username",
      "description": "Database username",
      "isSecret": false,
      "order": 3
    },
    "password": {
      "type": "string",
      "title": "Password",
      "description": "Database password",
      "isSecret": true,
      "order": 4
    }
  },
  "required": ["host", "database", "username", "password"]
}
