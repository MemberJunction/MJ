{
  "entity": "MJ: AI Prompts",
  "filePattern": "**/.*.json",
  "defaults": {
    "CategoryID": "@lookup:MJ: AI Prompt Categories.Name=Agent Type System Prompts?create&Description=System Prompts for Agent Types",
    "TypeID": "@lookup:MJ: AI Prompt Types.Name=Chat"
  },
  "ignoreDirectories": [
    "output",
    "templates"
  ],
  "pull": {
    "createNewFileIfNotFound": true,
    "newFileName": ".prompts.json",
    "appendRecordsToExistingFile": true,
    "updateExistingRecords": true,
    "ignoreNullFields": true,
    "ignoreVirtualFields": true,
    "preserveFields": [
      "TemplateText",
      "OutputExample"
    ],
    "excludeFields": [
      "TemplateID"
    ],
    "mergeStrategy": "merge",
    "backupBeforeUpdate": true,
    "backupDirectory": ".backups",
    "filter": "CategoryID IN (SELECT ID FROM [__mj].vwAIPromptCategories WHERE Name = 'Agent Type System Prompts')",
    "externalizeFields": [
      {
        "field": "TemplateText",
        "pattern": "@file:templates/{Name}.template.md"
      },
      {
        "field": "OutputExample",
        "pattern": "@file:output/{Name}.example.json"
      }
    ],
    "lookupFields": {
      "CategoryID": {
        "entity": "MJ: AI Prompt Categories",
        "field": "Name"
      },
      "TypeID": {
        "entity": "MJ: AI Prompt Types",
        "field": "Name"
      }
    },
    "relatedEntities": {
      "MJ: AI Prompt Models": {
        "entity": "MJ: AI Prompt Models",
        "foreignKey": "PromptID",
        "filter": "Status = 'Active'",
        "lookupFields": {
          "ModelID": {
            "entity": "MJ: AI Models",
            "field": "Name"
          },
          "VendorID": {
            "entity": "MJ: AI Vendors",
            "field": "Name"
          }
        }
      }
    }
  }
}
