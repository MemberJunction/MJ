{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start MJExplorer",
      "type": "npm",
      "script": "start",
      "path": "packages/MJExplorer",
      "isBackground": true,
      "presentation": {
        "focus": true,
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      },
      "dependsOn": ["build-debug-GraphQLDataProvider"]
    },
    {
      "label": "build-debug-GraphQLDataProvider",
      "type": "npm",
      "script": "build-debug",
      "path": "packages/GraphQLDataProvider",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build-mcp-server",
      "type": "npm",
      "script": "build",
      "path": "packages/AI/MCPServer",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build MetadataSync",
      "type": "shell",
      "command": "npm run build --workspace=@memberjunction/metadata-sync && npm run build --workspace=@memberjunction/cli",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build MetadataSync Extension",
      "type": "npm",
      "script": "build",
      "path": "packages/VSCodeExtensions/MetadataSync",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build AI Packages",
      "type": "shell",
      "command": "npm run build --workspace=@memberjunction/ai-prompts && npm run build --workspace=@memberjunction/ai-agents && npm run build --workspace=@memberjunction/ai-cli",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build QueryGen",
      "type": "shell",
      "command": "npm run build --workspace=@memberjunction/query-gen && npm run build --workspace=@memberjunction/cli",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Kill Port 4001",
      "type": "shell",
      "command": "kill -9 $(lsof -i :4001 -t) 2>/dev/null || true",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build MJCLI",
      "type": "shell",
      "command": "npm run build --workspace=@memberjunction/cli",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build MetadataSync with SQLLogger",
      "type": "shell",
      "command": "npm run build --workspace=@memberjunction/sqlserver-dataprovider && npm run build --workspace=@memberjunction/metadata-sync && npm run build --workspace=@memberjunction/cli",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
