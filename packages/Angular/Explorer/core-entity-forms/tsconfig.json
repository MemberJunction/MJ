{
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "lib": ["es2022", "dom"],
      "skipLibCheck": true,
      "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
      "skipTemplateCodegen": true,
      "strictMetadataEmit": true,
      "enableResourceInlining": true,
      "strictTemplates": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/EXAMPLE-*.ts",
      "src/**/*.example.ts"
    ]
  }
  