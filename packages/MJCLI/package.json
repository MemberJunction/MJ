{
  "name": "@memberjunction/cli",
  "type": "module",
  "version": "5.3.1",
  "description": "MemberJunction command line tools",
  "keywords": [
    "oclif"
  ],
  "homepage": "https://github.com/MemberJunction/MJ",
  "bugs": {
    "url": "https://github.com/MemberJunction/MJ/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MemberJunction/MJ"
  },
  "license": "ISC",
  "author": "MemberJunction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mj": "bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "tsc && tsc-alias -f && oclif manifest",
    "prepack": "npm run build && oclif readme",
    "postpack": "rimraf oclif.manifest.json",
    "version": "oclif readme && git add README.md",
    "test": "vitest run"
  },
  "oclif": {
    "bin": "mj",
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init",
      "prerun": "./dist/hooks/prerun"
    },
    "dirname": "mj",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-version"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 1
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@memberjunction/ai-cli": "5.3.1",
    "@memberjunction/codegen-lib": "5.3.1",
    "@memberjunction/config": "5.3.1",
    "@memberjunction/core": "5.3.1",
    "@memberjunction/installer": "5.3.1",
    "@memberjunction/db-auto-doc": "5.3.1",
    "@memberjunction/metadata-sync": "5.3.1",
    "@memberjunction/query-gen": "5.3.1",
    "@memberjunction/server-bootstrap-lite": "5.3.1",
    "@memberjunction/sqlserver-dataprovider": "5.3.1",
    "@memberjunction/testing-cli": "5.3.1",
    "@oclif/core": "^3.27.0",
    "@oclif/plugin-help": "^6.2.37",
    "@oclif/plugin-version": "^2.2.36",
    "@oclif/plugin-warn-if-update-available": "^3.1.55",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "cosmiconfig": "9.0.0",
    "dotenv": "17.2.4",
    "fast-glob": "^3.3.3",
    "figlet": "^1.10.0",
    "fs-extra": "^11.3.3",
    "@memberjunction/skyway-core": "^0.5.3",
    "ora-classic": "^5.4.2",
    "recast": "^0.23.11",
    "simple-git": "^3.30.0",
    "zod": "~3.24.4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "oclif": "^4.22.73",
    "rimraf": "6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
