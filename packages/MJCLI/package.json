{
  "name": "@memberjunction/cli",
  "version": "3.1.0",
  "description": "MemberJunction command line tools",
  "keywords": [
    "oclif"
  ],
  "homepage": "https://github.com/MemberJunction/MJ",
  "bugs": {
    "url": "https://github.com/MemberJunction/MJ/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MemberJunction/MJ"
  },
  "license": "ISC",
  "author": "MemberJunction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mj": "bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "rimraf oclif.manifest.json",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "mj",
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init",
      "prerun": "./dist/hooks/prerun"
    },
    "dirname": "mj",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-version"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 1
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^5.0.1",
    "@memberjunction/ai-cli": "3.1.0",
    "@memberjunction/codegen-lib": "3.1.0",
    "@memberjunction/config": "3.1.0",
    "@memberjunction/core": "3.1.0",
    "@memberjunction/db-auto-doc": "3.1.0",
    "@memberjunction/metadata-sync": "3.1.0",
    "@memberjunction/query-gen": "3.1.0",
    "@memberjunction/sqlserver-dataprovider": "3.1.0",
    "@memberjunction/testing-cli": "3.1.0",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-version": "^2.0.17",
    "@oclif/plugin-warn-if-update-available": "^3.0.16",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "cosmiconfig": "9.0.0",
    "dotenv": "16.4.5",
    "fast-glob": "^3.3.2",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "node-flyway": "0.0.13",
    "ora-classic": "^5.4.2",
    "recast": "^0.23.9",
    "simple-git": "^3.27.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "oclif": "^4",
    "rimraf": "5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
