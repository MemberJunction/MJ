{
  "name": "mj-metadata-intellisense",
  "displayName": "MemberJunction MetadataSync IntelliSense",
  "description": "IntelliSense support for MemberJunction MetadataSync JSON files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Programming Languages"],
  "keywords": ["memberjunction", "metadata", "intellisense", "autocomplete"],
  "icon": "icon.png",
  "publisher": "memberjunction",
  "repository": {
    "type": "git",
    "url": "https://github.com/MemberJunction/MJ.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:**/.mj-sync.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mjMetadataSync.refreshMetadata",
        "title": "MJ: Refresh Metadata",
        "category": "MemberJunction"
      },
      {
        "command": "mjMetadataSync.showEntityInfo",
        "title": "MJ: Show Entity Info Panel",
        "category": "MemberJunction",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mjMetadataSync.showEntityInfo",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "mjMetadataSync.showEntityInfo",
          "when": "resourceExtname == .json"
        }
      ]
    },
    "configuration": {
      "title": "MemberJunction MetadataSync",
      "properties": {
        "mjMetadataSync.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense for MJ metadata JSON files"
        },
        "mjMetadataSync.showFieldDescriptions": {
          "type": "boolean",
          "default": true,
          "description": "Show field descriptions on hover"
        },
        "mjMetadataSync.cacheTimeout": {
          "type": "number",
          "default": 300,
          "description": "Metadata cache timeout in seconds"
        },
        "mjMetadataSync.autoShowEntityPanel": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show entity info panel when opening JSON files in MJ metadata directories"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@memberjunction/core": "file:../../MJCore",
    "@memberjunction/global": "file:../../MJGlobal",
    "@memberjunction/server": "file:../../MJServer",
    "@memberjunction/sqlserver-dataprovider": "file:../../SQLServerDataProvider",
    "@memberjunction/core-entities": "file:../../MJCoreEntities",
    "cosmiconfig": "^8.3.6",
    "dotenv": "^16.3.1",
    "mssql": "^10.0.1",
    "zod": "^3.22.4"
  }
}