{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2022",
      "lib": ["es2022"],
      "skipLibCheck": true,
      "declaration": true,
      "moduleResolution": "node",
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }