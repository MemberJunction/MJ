{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2020",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "lib": [
        "es2018",
        "dom"
      ]
    },
    "angularCompilerOptions": {
      "skipTemplateCodegen": true,
      "strictMetadataEmit": true,
      "enableResourceInlining": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  