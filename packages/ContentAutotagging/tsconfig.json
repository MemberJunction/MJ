{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2022",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["es2022", "esnext.asynciterable"],
      "moduleResolution": "node",
      "removeComments": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true, 
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "@content-autotagging/core": ["./Core"],
        "@content-autotagging/engine": ["./Engine"],
        "@content-autotagging/localfilesystem": ["./LocalFileSystem"], 
        "@content-autotagging/rssfeed": ["./RSSFeed"], 
        "@content-autotagging/websites": ["./Websites"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts"], 
    "references": [
        { "path": "./Core" }, 
        { "path": "./Engine" }, 
        { "path": "./LocalFileSystem" }, 
        { "path": "./RSSFeed" }, 
        { "path": "./Websites" }
    ]
  }