{
  "name": "@memberjunction/db-auto-doc",
  "type": "module",
  "version": "3.4.0",
  "description": "AI-powered database documentation generator for SQL Server, MySQL, and PostgreSQL. Analyzes your database structure, uses AI to generate comprehensive descriptions, and saves them as metadata. Works standalone - no MemberJunction runtime required.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "default": "./dist/api/index.js"
    },
    "./dist/commands/*": {
      "types": "./dist/commands/*.d.ts",
      "default": "./dist/commands/*.js"
    }
  },
  "bin": {
    "db-auto-doc": "bin/run.js"
  },
  "oclif": {
    "bin": "db-auto-doc",
    "commands": "./dist/commands",
    "dirname": "db-auto-doc",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "/bin",
    "/dist"
  ],
  "scripts": {
    "start": "ts-node-dev src/cli/cli.ts",
    "build": "tsc && tsc-alias -f",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sql-server",
    "mysql",
    "postgresql",
    "database",
    "documentation",
    "ai",
    "metadata",
    "extended-properties",
    "database-documentation",
    "sql-server-documentation",
    "auto-documentation",
    "postgres"
  ],
  "author": "MemberJunction.com",
  "license": "MIT",
  "devDependencies": {
    "@types/mssql": "^9.1.9",
    "@types/node": "^24.10.11",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "@types/inquirer": "^9.0.7"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@memberjunction/ai": "3.4.0",
    "@memberjunction/ai-provider-bundle": "3.4.0",
    "@memberjunction/core": "3.4.0",
    "@memberjunction/global": "3.4.0",
    "@oclif/core": "^3.27.0",
    "@oclif/plugin-help": "^6.2.37",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "inquirer": "^8.2.5",
    "mssql": "^12.2.0",
    "mysql2": "^3.16.3",
    "nunjucks": "^3.2.4",
    "ora": "^9.3.0",
    "pg": "^8.18.0",
    "uuid": "^13.0.0",
    "zod": "~3.24.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MemberJunction/MJ"
  }
}
